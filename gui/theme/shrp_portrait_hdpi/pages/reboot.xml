<?xml version="1.0"?>
<recovery>
	<pages>
		<page name="reboot">
			<template name="c_reboot_page"/>
			<action>
				<touch key="home"/>
				<action function="overlay"/>
			</action>

			<action>
				<touch key="back"/>
				<action function="overlay"/>
			</action>
		</page>
		<page name="c_advanced_reboot">
			<template name="c_advanced_reboot_page"/>
			<action>
				<touch key="home"/>
				<action function="overlay"/>
			</action>

			<action>
				<touch key="back"/>
				<action function="overlay"/>
				<action function="overlay">reboot</action>
			</action>
		</page>
	</pages>
</recovery>
